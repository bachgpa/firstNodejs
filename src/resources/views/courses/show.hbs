<div class="mt-4">
  <div class="row">
    <div class="col-lg-3">
      <button>Học ngay</button>
    </div>
    {{#with myCourse}}
      <div class="col-lg-9">
        <h2>Thiết kế web {{name}}</h2>
        <iframe
          width="560"
          height="315"
          src="https://www.youtube.com/embed/{{videoId}}?si=xQfJXhsbp0hOkUw_"
          title="YouTube video player"
          frameborder="0"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
          allowfullscreen
        ></iframe>
        <h4>{{description}}</h4>
      </div>
    {{/with}}
  </div>
</div>